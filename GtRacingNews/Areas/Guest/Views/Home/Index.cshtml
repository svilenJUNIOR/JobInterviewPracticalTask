@using GtRacingNews.ViewModels.News
@model List<ShowGuestNews>



<h1 style="color: white; font-size:30px; text-align:center">Welcome to GTNews please log in or sign up, for a better user experience</h1>

<section style="text-align:center">
    <a style="color: white; font-size:30px;" href="/User/Register">SIGN UP</a>
</section>

<section style="text-align:center">
    <a style="color: white; font-size:30px;" href="/User/Login">LOG IN</a>
</section>

<h2 style="color: white; font-size:30px; text-align:center">Most popular news</h2>

<div class="row">
    @foreach (var news in @Model)
    {
        <h1 style="color: white">@news.Heading</h1>
        <div class="box" style="box-shadow: 0px 0px 10px 0px white; background-color: lightgray;">
            <p style="font-size: 30px">@news.Description</p>
        </div>
    }
</div>

<link rel="stylesheet" href="~/css/GuestCss/Home.css"></link>