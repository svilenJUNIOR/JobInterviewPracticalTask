<h1 style="text-align:center; color:white">Add new championship</h1>
<div class="box">
    <form method="post">
        <table style="height: 150px">
            <tr>
                <td>
                    <label for="name">Name</label>
                </td>
                <td width="300px">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Must be less than 50 symbols"/>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="logoUrl">LogoUrl</label>
                </td>
                <td width="300px">
                    <input type="text" class="form-control" id="logoUrl" name="logoUrl" />
                </td>
            </tr>
            <tr>
                <td>
                    <p>Submit</p>
                </td>
                <td>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </td>
            </tr>
        </table>
    </form>
</div>
<link rel="stylesheet" href="~/css/ChampionshipCss/Add.css"></link>
