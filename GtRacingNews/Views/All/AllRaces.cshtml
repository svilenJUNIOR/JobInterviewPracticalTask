@using GtRacingNews.ViewModels.Race
@model List<ViewAllRacesViewModel>

@{
<div class="first">
    <div style="margin-top:15px">
        <table style="width: 400px;">
            <th colspan="2" style="border: 1px solid black; background-color: white; text-align: center">GT World challenge Europe</th>
            @foreach (var race in Model)
            {
                if (@race.ChampionshipName == "GT Europe Challenge By Fanatec")
                {
                    <tr style="border: 1px solid black; background-color: white">
                        <td style="border: 1px solid black; background-color: white">
                            @race.Name - @race.Date 

                           @{
                               if (@race.HasFinishied)
                               {
                                   <a href="/Race/Result?championshipName=@race.ChampionshipName" class="btn btn-primary">Results</a>
                               }
                               else
                               {
                                   <button disabled style="color: black">Not Finished Yet!</button>
                               }
                           }
                           
                        </td>
                    </tr>
                }
            }
        </table>
    </div>

